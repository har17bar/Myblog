<%- include('header',{title:"AddAticle"})-%>

<% if (errors) { %>
<% errors.forEach(function(error){ %>
<div class="alert alert-danger">
  <%= error.msg %>
</div>
<% }); %>
<% } %>
<div class="container">
  <h1>
    Register
  </h1>
  <form action="/users/register" method='POST'>
    <div class="form-group">
      <label for="">Name:</label>
      <input class="form-control" type="text" name="name" type="text">
    </div>
    <div class="form-group">
      <label for="">Email:</label>
      <input class="form-control" type="text" name="email" type="text">
    </div>
    <div class="form-group">
      <label for="">Username:</label>
      <input class="form-control" type="text" name="username"></textarea>
    </div>
    <div class="form-group">
      <label for="">Password:</label>
      <input class="form-control" type="password" name="password"></textarea>
    </div>

    <input class="btn-primary" type="submit" value="Submit">
  </form>
  <%- include('footer') -%>
</div>